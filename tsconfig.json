{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "bundler", 
    "jsx": "react-jsx",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,      // Importante: genera archivos .d.ts
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // TS entienda las rutas relativas
    "baseUrl": "."
  },
  "include": [
    "src/**/*"  
  
  ],
  "exclude": ["node_modules", "dist"]
}